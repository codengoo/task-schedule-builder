{
  "name": "task-scheduler-builder",
  "version": "0.1.0",
  "description": "TypeScript builder for creating, managing, and deleting Windows Task Scheduler tasks",
  "type": "module",
  "keywords": [
    "windows",
    "task-scheduler",
    "schtasks",
    "builder",
    "xml",
    "typescript"
  ],
  "license": "MIT",
  "author": "",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "tsdown": "^0.15.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.9"
  }
}
